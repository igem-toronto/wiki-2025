---
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>iGEM Toronto 2025</title>
	</head>
	<body>
    <div class="win-h-screen flex flex-col justify-between">
      <div class="mb-20">
        <Header />
        <article class="py-4 mt-12 flex gap-12">
          <nav class="flex-[1]">
            <slot name="sidebar" />
          </nav>
          <main class="text-justify flex-[3]">
            <div class="max-w-[80ch]">
              <slot name="main"/>
            </div>
          </main>
        </article>
      </div>
      <Footer />
    </div>
	</body>
</html>
