
---
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="favicon/favicon-16x16.png">
    <link href="https://cdn.jsdelivr.net/npm/katex@0.16.21/dist/katex.min.css" rel="stylesheet">
    <script src="https://unpkg.com/alpinejs" defer></script>
    <meta name="generator" content={Astro.generator} />
    <title>iGEM Toronto 2025</title>
  </head>
  <body>
    <div class="min-h-screen flex flex-col justify-between">
      <div class="mb-20">
        <Header />

        <article class={`py-4 mt-12 flex gap-12 ${!Astro.slots.sidebar ? 'justify-center' : ''}`}>
          <nav class="flex-[1]" style={!Astro.slots.sidebar ? 'display: none;' : ''}>
            <slot name="sidebar" />
          </nav>
          <main class={`mb-4 ${Astro.slots.sidebar ? 'flex-[3]' : 'w-full max-w-[120ch]'}`}>
            <div>
              <slot name="main" />
            </div>
          </main>
        </article>

      </div>
      <Footer />
    </div>
  </body>
</html>
