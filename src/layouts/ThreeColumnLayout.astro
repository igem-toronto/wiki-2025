---
import Layout from "@/layouts/Layout.astro";

const headerIconSrc = Astro.props['headerIconSrc']
---

<Layout>
  <div slot="content" class="relative">
     <img
        alt="Logo" class="absolute w-[40vw] right-0 -z-20 hidden lg:block"
        src="https://static.igem.wiki/teams/5708/headericons/header-background-cropped.webp"
      />
    <article class="py-4 mt-32 mb-32 flex gap-12 justify-center">
      <nav class="xl:flex-[1] flex-[4] hidden lg:block">
        <slot name="sidebar" />
      </nav>
      <main class="px-4 max-w-[80ch] xl:max-w-[90ch] mt-16">
        <slot name="main" />
      </main>
      <div class="flex-1 hidden lg:block relative">
        { headerIconSrc &&
          <div class="hidden xl:block w-full top-15">
            <img class="w-full" src={headerIconSrc} alt="Header Icon" />
          </div>
        }
      </div>
    </article>
  </div>
</Layout>

