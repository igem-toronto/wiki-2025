---
import '@/styles/global.css'
import { Content, getHeadings, frontmatter } from '@/content/description.mdx'
import Layout from '@/layouts/Layout.astro'
import Sidebar from '@/components/Sidebar.astro'
import References from '@/components/References.astro'

---

<Layout>
  <Sidebar headings={getHeadings()} slot="sidebar" />
  <div slot="main">
    <Content />
    <References citations={frontmatter.citations} />
  </div>
</Layout>
